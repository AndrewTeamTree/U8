extends layout

block content
  body
    h2.error Oooops!
  
    ul.error
      li Title is required
      li Author is required

    form(method='POST', action='/books/new')  
      p
      label(for='title') Title: &nbsp;
      input#title(type='text' name='title' ) 
      p
      br
      label(for='author') Author: &nbsp;
      input#author(type='text' name='author' )
      p
      br
      label(for='genre') Genre: &nbsp;
      input#genre(type='text' name='genre')
      p
      br
      label(for="year") Year: &nbsp;
      input#year(name="year" type="text")

      // Submit button to create a new book
      p
        input(type="submit" value="Create New Book")

      // Cancel button to return to the home page
      p
        a.button(href="/") Cancel
